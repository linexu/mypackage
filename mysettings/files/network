
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option type 'bridge'
	option ifname 'eth0'
	option proto 'static'
	option ipaddr '192.168.1.254'
	option netmask '255.255.255.0'
	option delegate '0'
	option gateway '127.0.0.1'

config interface 'wan'
	option ifname 'eth1'
	option _orig_ifname 'eth1'
	option _orig_bridge 'false'
	option proto 'pppoe'
	option username '02985412735'
	option password 'a486200'
	option ipv6 'auto'
	option keepalive '0'

config interface 'wan6'
	option proto 'dhcpv6'
	option ifname 'eth1'
	option delegate '0'
	option reqaddress 'none'
	option reqprefix 'no'

